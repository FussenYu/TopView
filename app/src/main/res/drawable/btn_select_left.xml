<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">

            <item android:right="-2dp">
                <shape>
                    <!--  圆角的半径 -->

                    <corners android:bottomLeftRadius="6dp" android:bottomRightRadius="0dp" android:topLeftRadius="6dp" android:topRightRadius="0dp" />
                    <!-- 描边 -->
                    <stroke android:width="1dp" android:color="#848484" />
                    <solid android:color="#848484" />
                </shape>
            </item>


        </layer-list>

    </item>


    <item android:state_pressed="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">

            <item android:right="-2dp">
                <shape>
                    <!--  圆角的半径 -->
                    <corners android:bottomLeftRadius="6dp" android:bottomRightRadius="0dp" android:topLeftRadius="6dp" android:topRightRadius="0dp" />
                    <!-- 描边 -->
                    <stroke android:width="1dp" android:color="#848484" />
                    <solid android:color="#33848484" />
                </shape>
            </item>

        </layer-list>

    </item>

    <item android:state_checked="false">

        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">

            <item android:right="-2dp">
                <shape android:shape="rectangle">
                    <!--  圆角的半径 -->
                    <corners android:bottomLeftRadius="6dp" android:bottomRightRadius="0dp" android:topLeftRadius="6dp" android:topRightRadius="0dp" />
                    <!-- 描边 -->
                    <stroke android:width="1dp" android:color="#848484" />
                    <solid android:color="#ffffff" />
                </shape>
            </item>

        </layer-list>
    </item>


</selector>